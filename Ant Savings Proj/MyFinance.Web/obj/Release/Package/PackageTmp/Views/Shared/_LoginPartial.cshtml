@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
        <li>
            @Html.ActionLink("Olá, " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
}
else
{
    <li class="icon-login">
        @Html.ActionLink("LOGIN", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </li>
    <li class="icon-criar-conta">
        @Html.ActionLink("CRIAR CONTA", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    </li>
}

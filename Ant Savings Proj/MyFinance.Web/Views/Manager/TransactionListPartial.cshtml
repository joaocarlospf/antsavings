@model List<MyFinance.Web.Models.OperationVM>

<div id="transactionWrap" class="tbl tbl-striped" >
    <div class="row tbl-header" style="font-weight: bold;">
        <div class="col-xs-2">Data</div>
        <div class="col-xs-3">Objetivo(s)</div>
        <div class="col-xs-2">Fundo(s)</div>
        <div class="col-xs-3">Descrição</div>
        <div class="col-xs-2 text-right" style="padding-right: 30px;">Valor</div>
    </div>
    <div style="height: 215px;" class="tbl-line">
        <div id="data-container" class="slimscroll">
            @if (Model != null)
            {
                foreach (var entry in Model)
                {
                    <div class="row tbl-row">
                        <div class="col-xs-2 tbl-col">@entry.Date.ToShortDateString()</div>
                        <div class="col-xs-3 tbl-col" title="@entry.Reserves">@entry.Reserves</div>
                        <div class="col-xs-2 tbl-col" title="@entry.Funds">@entry.Funds</div>
                        <div class="col-xs-3 tbl-col" title="@entry.Description">@entry.Description</div>
                        <div class="col-xs-2 tbl-col text-right @(entry.Value > 0 ? "text-info" : "text-danger")" style="padding-right: 30px;">@entry.Value.ToString("#,0.00")</div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<script>
    $('.slimscroll').slimScroll({
        height: 'auto',
    });
</script>
@model MyFinance.Web.Models.FundsViewModel

@using (Html.BeginForm("AddFund", "Funds", FormMethod.Post, new { id = "addFundForm", @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Fund.FundType, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.Fund.FundType, Model.FundTypeList, htmlAttributes: new { @class = "select-block" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Fund.Name, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Fund.Name, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Fund.NameAbbreviation, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Fund.NameAbbreviation, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
}